// Learning Stroustrup prog1.cc
//

#include "cstdio"
#include "iostream"

double sum(double a, double b) {return a+b;}
double mult(double a, double b) {return a*b;}
double div(double a, double b) {return b!=0 ? a/b : a/(b+0.000000001);}

int main(int argc, char** argv) 
{
    printf("Hello World\n");
    std::cout << "Hello World" << std::endl;

    double a = 15;
    double b = 3.4;
    std::cout << "sum(a,b) = " << sum(a,b) << std::endl;
    std::cout << "mult(a,b) = " << mult(a,b) << std::endl;
    std::cout << "div(a,b) = " << div(a,b) << std::endl;
}
